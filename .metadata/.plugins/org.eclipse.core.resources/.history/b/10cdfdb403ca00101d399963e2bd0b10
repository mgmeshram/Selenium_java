package lab;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class Checkboxcheck {

	public static void main(String[] args) throws InterruptedException {
		WebDriver driver= new ChromeDriver();
		driver.manage().window().maximize();
		
		driver.get("https://opensource-demo.orangehrmlive.com/web/index.php/auth/login");
		Thread.sleep(Duration.ofSeconds(5));
		
		WebElement uname=driver.findElement(By.xpath("//*[@name='username']"));
		Thread.sleep(Duration.ofSeconds(5));
		uname.sendKeys("Admin");
		
		WebElement upass=driver.findElement(By.xpath("//*[@name='password']"));
		Thread.sleep(Duration.ofSeconds(5));
		upass.sendKeys("admin123");
		
		WebElement login=driver.findElement(By.xpath("//*[@type='submit']"));
		Thread.sleep(Duration.ofSeconds(5));
		login.click();
		
		WebElement myinfo=driver.findElement(By.xpath("//*[@href='/web/index.php/pim/viewMyDetails']"));
		Thread.sleep(Duration.ofSeconds(5));
		myinfo.click();

		// TODO Auto-generated method stub

	}

}
